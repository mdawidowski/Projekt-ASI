<p id="notice"><%= notice %></p>

<h1>Quests</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Answerone</th>
      <th>Answertwo</th>
      <th>Answerthree</th>
      <th>Answergood</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quests.each do |quest| %>
      <tr>
        <td><%= quest.description %></td>
        <td><%= quest.answerone %></td>
        <td><%= quest.answertwo %></td>
        <td><%= quest.answerthree %></td>
        <td><%= quest.answergood %></td>
        <td><%= link_to 'Show', quest %></td>
        <td><%= link_to 'Edit', edit_quest_path(quest) %></td>
        <td><%= link_to 'Destroy', quest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

